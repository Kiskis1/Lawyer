<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.acruxcs.lawyer.ui.login.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.acruxcs.lawyer.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.acruxcs.lawyer.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_newReservationFragment"
            app:destination="@id/newReservationFragment" />
        <action
            android:id="@+id/action_mainFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
    </fragment>
    <fragment
        android:id="@+id/lawyersFragment"
        android:name="com.acruxcs.lawyer.ui.lawyers.LawyersFragment"
        android:label="lawyers_fragment"
        tools:layout="@layout/fragment_lawyers">
        <action
            android:id="@+id/action_lawyersFragment_to_lawyersInfoFragment"
            app:destination="@id/lawyersInfoFragment" />
        <action
            android:id="@+id/action_lawyersFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
    </fragment>
    <fragment
        android:id="@+id/lawyersInfoFragment"
        android:name="com.acruxcs.lawyer.ui.lawyersinfo.LawyersInfoFragment"
        android:label="fragment_lawyers_info"
        tools:layout="@layout/fragment_lawyers_info">
        <action
            android:id="@+id/action_lawyersInfoFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
        <action
            android:id="@+id/action_lawyersInfoFragment_to_newReservationFragment"
            app:destination="@id/newReservationFragment" />
        <argument
            android:name="lawyer"
            app:argType="com.acruxcs.lawyer.model.User" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.acruxcs.lawyer.ui.profile.ProfileFragment"
        android:label="ProfileFragment">
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_profileFragment_to_newCaseFragment"
            app:destination="@id/newCaseFragment"
            app:enterAnim="@anim/slide_up"
            app:popExitAnim="@anim/slide_down" />
        <action
            android:id="@+id/action_profileFragment_to_profileEditFragment"
            app:destination="@id/profileEditFragment" />
        <action
            android:id="@+id/action_profileFragment_to_workingHoursFragment"
            app:destination="@id/workingHoursFragment" />
        <action
            android:id="@+id/action_profileFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/newCaseFragment"
        android:name="com.acruxcs.lawyer.ui.profile.NewCaseFragment"
        android:label="NewCaseFragment">
        <argument
            android:name="case"
            app:argType="com.acruxcs.lawyer.model.Case"
            app:nullable="true" />
        <argument
            android:name="tag"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.acruxcs.lawyer.ui.lawyersinfo.QuestionFragment"
        android:label="QuestionFragment" />
    <fragment
        android:id="@+id/profileEditFragment"
        android:name="com.acruxcs.lawyer.ui.profile.ProfileEditFragment"
        android:label="fragment_profile_edit"
        tools:layout="@layout/fragment_profile_edit">
    </fragment>
    <fragment
        android:id="@+id/newReservationFragment"
        android:name="com.acruxcs.lawyer.ui.lawyersinfo.NewReservationFragment"
        android:label="NewReservationFragment">
        <argument
            android:name="lawyer"
            app:argType="com.acruxcs.lawyer.model.User" />
        <argument
            android:name="tag"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="reservation"
            app:argType="com.acruxcs.lawyer.model.Reservation"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/workingHoursFragment"
        android:name="com.acruxcs.lawyer.ui.profile.WorkingHoursFragment"
        android:label="WorkingHoursFragment" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.acruxcs.lawyer.ui.profile.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
</navigation>